extends ../layout
block content
    .container
        h1 Register
        form(action="/user", method="POST")
            .form-group
                label Email
                input#email(type="email", name="email" placeholder="Email...").form-control
            .form-group
                label Username
                input#username(type="text", name="username" placeholder="Username here...").form-control
            .form-group
                label Password
                input#password(type="password", name="password" placeholder="Password here...").form-control
            .form-group
                input(type="submit", value="Submit").btn.btn-primary