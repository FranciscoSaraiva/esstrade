{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6", "es2015", "dom"],
        "outDir": "build",
        "rootDir": "src",
        "types": ["node", "inquirer", "figlet", "clear"],
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false, //remove property initialization
        "moduleResolution": "node" //to import tslib correctly for async/await
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
    ]
}